{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "outDir": "./dist/esm",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules/**"]
}